#!/bin/bash
echo "Какую директорию вы хотите создать или проверить?"
read DIR
case $DIR in
/*/* | /*/*/*)
 if [[ -e $DIR ]]; then
 echo "Эта директория уже существует:"$DIR
 elif [[ ! -e $DIR ]]; then
 echo "Такой директории нет, пожалуйста подождите..."
mkdir $DIR
echo "Директория создана!"
fi;
;;
*)
echo "Вы ввели неккоректное значение, пожалуйста введите абсолютный путь"
;;
esac
